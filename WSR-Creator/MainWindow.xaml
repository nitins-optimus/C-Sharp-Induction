<Window x:Class="WSR_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:WSR_Creator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local1:WsrCollectn></local1:WsrCollectn>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>

            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Margin="10" Name="WsrCollectn" ItemsSource="{Binding WsrList }" SelectedItem="{Binding SelectedWsr}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ProjectName" Width="120" DisplayMemberBinding="{Binding ProjectName}" />
                    <GridViewColumn Header="Effort" Width="80" DisplayMemberBinding="{Binding EffortSpent}" />
                    <GridViewColumn Header="OwnerName" Width="150" DisplayMemberBinding="{Binding OwnerName}" />
                   
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Window>
